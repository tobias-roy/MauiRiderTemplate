<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TipCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TipCalculator"
    xmlns:views="clr-namespace:TipCalculator.Views"
    Shell.FlyoutBehavior="Disabled"
    >
    <TabBar Shell.TabBarTitleColor="Black"
            Shell.TabBarBackgroundColor="White"
            Shell.TabBarUnselectedColor="Grey"
            Shell.TabBarForegroundColor="Black"
            >
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate views:MainPage}"
                Icon="home.png"
            />
            <ShellContent
                Title="Calculators" 
                ContentTemplate="{DataTemplate views:Calculator}"
                Icon="calculator_svg.png"
                />
    </TabBar>
</Shell>
