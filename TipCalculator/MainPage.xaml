<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage"
             Title="Tip Calculator">

        <VerticalStackLayout
            Padding="30,0"
            Spacing="20">
            <Label Margin="0,10,0,0" FontAttributes="Bold">Bill Amount:</Label>
            <Entry x:Name="BillEntry" Placeholder="Enter bill amount" Keyboard="Numeric" />
            <Label x:Name="TipPercentageLabel">Tip Percentage: </Label>
            <Slider x:Name="TipSlider" Maximum="100" Minimum="0" Value="15" />
            <Label x:Name="TipAmountLabel">Tip: </Label>
            <Label x:Name="TotalLabel">Total: </Label>
            <Button x:Name="LowPercentageBtn" Text="15%" />
            <Button x:Name="HighPercentageBtn" Text="20%" />
            <Button x:Name="RoundDownBtn" Text="Round Down" />
            <Button x:Name="RoundUpBtn" Text="Round Up" />
        </VerticalStackLayout>
</ContentPage>
